class Produk {

		// property atau bisa juga di sebut data, sebuah classs bisa di isi dengan property

	// sebuah property harus di awali dengan visisbility 

	public $judul = "Naruto", $penerbit= "Gramedia", $penulis="Kishimoto", $harga=200000 ; // contoh mendefinisikan nilai property default


	// method adalah function di dalam class

	public function GetAll (){

			return "$this->judul, $this->penulis"; // $this adalah di tambahkan jika kita menulis funciton di dalam variable

	}

}

